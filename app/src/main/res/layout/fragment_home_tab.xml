<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.HomeTabFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/mainAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_bg_light_gray_50"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            app:layout_scrollFlags="scroll|enterAlways">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/homeToolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin"
                android:background="@color/bg_bg_light_gray_50"
                app:menu="@menu/home_top_menu" >
                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/badge_fantoo" />
                <TextView
                    android:id="@+id/tvDevText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Dev"
                    android:textColor="@color/black"
                    android:visibility="gone" />
            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <FrameLayout
            android:id="@+id/flRcBackGround"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            app:layout_scrollFlags="scroll|enterAlways"
            android:layout_below="@+id/mainAppBar">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcCategoryList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="0dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </FrameLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewpager_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_25"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/live_streaming_banner_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_livestreaming_banner"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rcCategoryvp">

            <ImageView
                android:id="@+id/live_badge"
                android:layout_width="37dp"
                android:layout_height="16dp"
                android:layout_marginStart="12dp"
                android:layout_marginVertical="11dp"
                android:src="@drawable/badge_live"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/live_streaming_title"
                style="@style/Body21420Regular"
                android:layout_width="221dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginVertical="11dp"
                android:textColor="@color/gray_800"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/live_badge"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="팬투TV 라이브 방송 보러가기" />

            <ImageView
                android:id="@+id/go_live_streaming"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="12dp"
                android:layout_marginVertical="11dp"
                android:src="@drawable/btn_next"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/rcCategoryvp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_bg_light_gray_50"
            app:layout_constraintTop_toBottomOf="@id/live_streaming_banner_container"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clAiBtnContainer"
        android:layout_width="175dp"
        android:layout_height="47.5dp"
        android:background="@drawable/bg_border_radius_100_gray50"
        android:clipToOutline="true"
        android:layout_gravity="bottom|right"
        android:backgroundTint="@color/primary_default"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="12dp"
        android:elevation="2dp">
        <TextView
            android:id="@+id/tvAiTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:lines="1"
            app:layout_constraintStart_toEndOf="@id/ivAiIcon"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="2dp"
            android:alpha="1"
            android:text="Ask AI Deokgom"
            android:visibility="visible"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
        <ImageView
            android:id="@+id/ivAiIcon"
            android:layout_width="47.5dp"
            android:layout_height="47.5dp"
            android:layout_marginBottom="-3dp"
            android:src="@drawable/icon_ai_character_head"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>